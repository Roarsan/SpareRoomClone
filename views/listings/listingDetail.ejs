<%- include('../layouts/navbar') %>

<div class="card mx-auto shadow-sm" style="max-width: 600px;">
  <img src="<%= list.image %>" class="card-img-top" alt="<%= list.title %>">
  <div class="card-body">
    <h4 class="card-title fw-bold"><%= list.title %></h4>
    <p class="text-muted mb-2"><%= list.address %></p>
    <h5 class="text-primary fw-bold">Â£<%= list.price %> / month</h5>
    <p class="mt-3"><%= list.description %></p>
  </div>
</div>

<div class="d-flex justify-content-center gap-3 mt-4">
  <a href="/list/<%= list._id %>/editlisting" class="btn btn-outline-primary">Edit</a>

  <form action="/list/<%= list._id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this listing?');">
      Delete
    </button>
  </form>
</div>

