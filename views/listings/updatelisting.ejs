<%- include('../partials/navbar') %>

<h3 class="mb-4">Update Listing</h3>

<form method="POST" action="/list/<%= requestedList._id %>?_method=PUT" class="p-3 bg-white rounded shadow-sm">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= requestedList.title %>">
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Image URL</label>
    <input type="text" name="image" id="image" class="form-control" value="<%= requestedList.image %>">
  </div>

  <div class="mb-3">
    <label for="address" class="form-label">Address</label>
    <input type="text" name="address" id="address" class="form-control" value="<%= requestedList.address %>">
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price (Â£)</label>
    <input type="number" name="price" id="price" class="form-control" value="<%= requestedList.price %>">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" class="form-control" rows="3"><%= requestedList.description %></textarea>
  </div>

  <button type="submit" class="btn btn-success w-100">Confirm Edit</button>
</form>

